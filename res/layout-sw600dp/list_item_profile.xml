<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/Lesson_Image"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_launcher_nafham" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/Lesson_Image"
      android:layout_marginTop="16dp"
        android:text="اسم الدرس"
        android:textColor="@color/profile_screen_Number_color"
        android:textSize="8pt"
      
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="10dp"
        android:text="اسم المادة+اسم الصف"
        android:textSize="7pt" 
        android:layout_marginTop="2dp"
        />

</RelativeLayout>